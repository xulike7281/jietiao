/* 箭头  */

.arrow-top {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  transform: rotate(45deg);
}

.arrow-left {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-left: 2px solid #999;
  border-bottom: 2px solid #999;
  transform: rotate(45deg);
}

.arrow-right1 {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
}

.arrow-bottom {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-right: 2px solid #999;
  border-bottom: 2px solid #999;
  transform: rotate(45deg);
}

