.shade {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  
}
.shade-bg{
   position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.5;
}
.shade-main{
  width: 592rpx;
  height: 376rpx;
 background:rgba(255,255,255,1);
 opacity: 1;
  border-radius:20rpx;
  position: absolute;
  top: 400rpx;
  left: 50%;
  transform: translate(-50%,0%);
  padding: 0 36rpx;
  box-sizing: border-box;
  text-align: center;
  color: #000;
}
.shade-main image{
  position: absolute;
  top:20rpx;
